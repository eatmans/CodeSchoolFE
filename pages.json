{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},

	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "可得校园"
			}
		}, {
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/todo/todo",
			"style": {
				"navigationBarTitleText": "TODO",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/about/about",
			"style": {
				"navigationBarTitleText": "关于我们",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/activity/activity",
			"style": {
				"navigationBarTitleText": "活动",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/agreement/agreement",
			"style": {
				"navigationBarTitleText": "可得校园协议",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/registered/registered",
			"style": {
				"navigationBarTitleText": "注册",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/schedule/schedule",
			"style": {
				"navigationBarTitleText": "课程表",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "可得校园",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#cdcdcd",
		"selectedColor": "#39cffc",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/app-fill.png",
			"selectedIconPath": "static/app-fill-selected.png",
			"text": "首页"
		}, {
			"pagePath": "pages/todo/todo",
			"iconPath": "static/order-list.png",
			"selectedIconPath": "static/order-list-selected.png",
			"text": "TODO"
		}, {
			"pagePath": "pages/schedule/schedule",
			"iconPath": "static/calendar.png",
			"selectedIconPath": "static/calendar-selected.png",
			"text": "课程表"
		}, {
			"pagePath": "pages/activity/activity",
			"iconPath": "static/emoji-fill.png",
			"selectedIconPath": "static/emoji-fill-selected.png",
			"text": "活动"
		}, {
			"pagePath": "pages/my/my",
			"iconPath": "static/user-fill.png",
			"selectedIconPath": "static/user-fill-selected.png",
			"text": "我的"
		}]
	}
}
